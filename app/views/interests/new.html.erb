    <%= f.label :hashtags %><br>
    <%= f.text_field :hashtags %>
  </p>
  
  <p>
    <%= f.label :user_mentions %><br>
    <%= f.text_field :user_mentions %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

