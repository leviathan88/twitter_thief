<h1>Listing All Interests</h1>

<%= link_to 'New interest', new_interest_path %>
 
<table>
  <tr>
    <th>Username</th>
    <th>Hashtags</th>
    <th>User Mentions</th>
    <th colspan="3"></th>
  </tr>
 
  <% @interests.each do |interest| %>
    <tr>
      <td><%= interest.screen_name %></td>
      <td><%= interest.hashtags %></td>
      <td><%= interest.user_mentions %></td>
      <td><%= link_to 'Show', interest_path(interest) %></td>
      <td><%= link_to 'Edit', edit_interest_path(interest) %></td>
      <td><%= link_to 'Delete', interest_path(interest), method: :delete,data: { confirm: 'Are you sure?' } %></td>
      
    </tr>
  <% end %>
</table>

<%= link_to 'Home', root_path %>
